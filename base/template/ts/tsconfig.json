{
  "compilerOptions": {
    "module": "none",
    "target": "esnext",
    "lib" : ["ESNext", "DOM"],
    "rootDirs": ["./"],
    "outFile": "../js/base.js",
    "declaration": true,
    "sourceMap": true,
    "alwaysStrict": true,

    "removeComments": true,
    "noEmitOnError": true,
//    "declarationMap": false,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["**/*"],
  "exclude": ["node_module"]
}